<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="10dp">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical">



    </ListView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TableLayout

            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:stretchColumns="*">
            <!--stretchColumns : 열 정렬-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="날짜"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="체중"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="운동"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="음주"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="메모"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="체중"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="운동"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="음주"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="#666666"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="메모"/>
                </TableRow>
        </TableLayout>
    </ScrollView>


</RelativeLayout>